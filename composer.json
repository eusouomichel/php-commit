{
    "name": "eusouomichel/php-commit",
    "description": "Uma biblioteca para criar mensagens de commit personalizadas",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Eusouomichel\\PhpCommit\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Michel Mil√©ski",
            "email": "michel.mileski@gmail.com"
        }
    ],
    "bin": [
        "commit"
    ],
    "require": {
        "symfony/console": "^7.1",
        "symfony/process": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "php-commit": "@php vendor/bin/commit",
        "commit": "@php vendor/bin/commit message",
        "wip": "@php vendor/bin/commit message --wip",
        "init-commit": "@php vendor/bin/commit init",
        "post-install-cmd": [
            "@php -r \"echo '\\nüéâ PHP Commit installed successfully!\\n';\"",
            "@php -r \"echo 'üöÄ Quick commands available:\\n';\"",
            "@php -r \"echo '  composer commit     - Interactive commit\\n';\"",
            "@php -r \"echo '  composer wip        - Quick WIP commit\\n';\"",
            "@php -r \"echo '  composer init-commit - Initialize config\\n';\"",
            "@php -r \"echo '\\nüìù Add these to your composer.json for convenience!\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo '\\nüîÑ PHP Commit updated! Commands still available:\\n';\"",
            "@php -r \"echo '  composer commit, composer wip, composer init-commit\\n';\""
        ]
    }
}
